<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent" android:layout_height="wrap_content"
android:id="@+id/aie_scroll_full_type11"
android:background="@color/color_bg"
tools:context="com.superiorinfotech.publicbuddy.VideoViewActivity">
<ImageView
    android:id="@+id/imageView_close"
    android:layout_width="@dimen/space_small"
    android:layout_height="@dimen/space_small"
    android:adjustViewBounds="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentRight="true"
    android:background="@drawable/btn_close"
    android:scaleType="fitCenter"
    android:visibility="invisible"/>
<TextView
    android:id="@+id/textView_number_page"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginTop="@dimen/margin_small"
    android:textColor="@android:color/white"
    android:layout_centerHorizontal="true"
    android:textSize="@dimen/font_size_large"
    android:text="1/2"/>
<ImageView
    android:id="@+id/imageView_item"
    android:layout_width="600dp"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:scaleType="fitCenter"
    android:visibility="gone"/>

<VideoView
    android:id="@+id/videoView_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:clickable="true"
    android:visibility="gone"/>
<FrameLayout android:id="@+id/controllerAnchor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/videoView_item"
    android:layout_centerHorizontal="true"
    android:visibility="visible"
    />

<Button
    android:id="@+id/btn_prev_item"
    android:layout_width="@dimen/width_arrow_full"
    android:layout_height="@dimen/height_arrow_full"
    android:layout_centerVertical="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="@drawable/prev_item_image"/>
<Button
    android:id="@+id/btn_forward_item"
    android:layout_width="@dimen/width_arrow_full"
    android:layout_height="@dimen/height_arrow_full"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:background="@drawable/next_item_image"
    />


<ProgressBar android:id="@+id/progress_dialog" style="?android:attr/progressBarStyleLarge"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:visibility="gone" />
</RelativeLayout>
