<?xml version="1.0" encoding="utf-8"?>

<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/preview"
            android:src="@drawable/picture"
            android:scaleType="fitCenter" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/removeRow"
            android:layout_alignParentRight="false"
            android:layout_alignTop="@+id/preview"
            android:src="@android:drawable/ic_delete"
            android:layout_alignParentEnd="false"
            android:layout_alignRight="@+id/preview" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/stopRecord"
            android:src="@drawable/player_stop"
            android:visibility="gone"
            android:background="@null"
            android:layout_alignTop="@+id/removeRow"
            android:layout_alignRight="@+id/removeRow"
            android:layout_alignBottom="@+id/removeRow"
            android:layout_alignLeft="@+id/removeRow" />

    </RelativeLayout>
</TableRow>
